{
  "name": "allcash/callcenter-crm-admin",
  "description": "Production-ready callcenter CRM admin (PHP + MongoDB + Tailwind)",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "mongodb/mongodb": "^1.19",
    "firebase/php-jwt": "^6.9",
    "vlucas/phpdotenv": "^5.5",
    "stripe/stripe-php": "^11.0",
    "aws/aws-sdk-php": "^3.300"
  },
  "require-dev": {
    "symfony/var-dumper": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "7.4.33"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r 'file_exists(\".env\") || copy(\".env.example\", \".env\");'"
    ],
    "post-update-cmd": [
      "@php -r 'file_exists(\".env\") || copy(\".env.example\", \".env\");'"
    ]
  }
}


